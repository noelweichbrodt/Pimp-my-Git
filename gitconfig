[user]
	name = Noel Weichbrodt
	email = noel@mailinator.com
[github]
	user = noelweichbrodt
[core]
	whitespace = trailing-space,space-before-tab
	autocrlf = input
[alias]
	changes = diff --name-status -r
	l = "!git log --graph --pretty='tformat:%C(yellow)%h{%C(green)%ar{%C(bold blue)%an{%C(red)%d%C(reset) %s' $* | column -t -s '{' | less -FXRS"
	lg = log --graph --pretty=format:'%Cred%h%Creset %an -%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset' --abbrev-commit --date=relative
	lf = log --graph --diff-filter [ACDMR] --name-status --pretty --source --abbrev-commit --format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset'
	lr = log ORIG_HEAD.. --stat --no-merges
	li = ls-files --exclude-standard --ignored --others
	undo = reset --soft HEAD^
	pl = git checkout HEAD
	pr = git checkout
	amend = commit --amend -C HEAD
	check = "!git fetch; git log HEAD.. --oneline"
[color]
	ui = auto
[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green

[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold

[color "status"]
	added = yellow
	changed = green
	untracked = cyan
[diff]
	renames = copies
[merge]
	stat = true
[advice]
	pushNonFastForward = false